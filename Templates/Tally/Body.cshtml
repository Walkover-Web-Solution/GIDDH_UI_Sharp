                                                                        <td class="border-none border-right"></td>
                                                                    }
                                                                    @if (GetDisplayStatus("Quantity"))
                                                                    {
                                                                        <td class="border-none border-right"></td>
                                                                    }
                                                                    @if (GetDisplayStatus("Rate"))

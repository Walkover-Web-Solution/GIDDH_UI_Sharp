{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Grafana.Loki"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/template-logs/giddh-template-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://loghub.msg91.com:3100",
          "labels": [
            {
              "key": "app",
              "value": "giddh-template-service"
            },
            {
              "key": "environment",
              "value": "Production"
            },
            {
              "key": "company",
              "value": "Walkover"
            },
            {
              "key": "product",
              "value": "Giddh"
            },
            {
              "key": "service_name",
              "value": "giddh-template"
            }
          ],
          "propertiesAsLabels": ["SourceContext", "RequestId"],
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}",
          "batchPostingLimit": 1000,
          "queueLimit": 100000,
          "period": "00:00:02",
          "httpHeaderName": "X-Scope-OrgID",
          "httpHeaderValue": "14"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId", "WithEnvironmentName"],
    "Properties": {
      "Application": "GiddhTemplateService",
      "Version": "1.0.0"
    }
  }
}
